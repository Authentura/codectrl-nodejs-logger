{
  "name": "codectrl",
  "version": "1.0.0",
  "description": "The NodeJS logger integration for CodeCTRL",
  "main": "build/main/index.js",
  "typings": "build/main/index.d.ts",
  "module": "build/module/index.js",
  "repository": "https://github.com/STBoyden/codectrl-nodejs-logger",
  "license": "MIT",
  "keywords": [],
  "scripts": {
    "build": "yarn build:protos && yarn build:main && yarn build:module",
    "build:main": "tsc -p tsconfig.json",
    "build:module": "tsc -p tsconfig.module.json",
    "build:protos": "protoc -I=protos/ protos/*.proto --js_out=import_style=commonjs,binary:./src/protos/ --grpc-web_out=import_style=typescript,mode=grpcweb:./src/protos",
    "fix:prettier": "prettier \"src/**/*.ts\" --write",
    "fix:lint": "eslint src --ext .ts --fix",
    "test:lint": "eslint src --ext .ts",
    "test:prettier": "prettier \"src/**/*.ts\" --list-different",
    "test:run": "yarn build && ava",
    "watch:build": "tsc -p tsconfig.json -w",
    "watch:test": "nyc --silent ava --watch",
    "version": "standard-version",
    "reset-hard": "git clean -dfx && git reset --hard && yarn"
  },
  "engines": {
    "node": ">=10"
  },
  "dependencies": {
    "grpc-web": "^1.4.1"
  },
  "devDependencies": {
    "@ava/typescript": "^3.0.1",
    "@types/glob": "^8.0.0",
    "@types/google-protobuf": "^3.15.6",
    "@types/node": "^18.11.4",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/eslint-plugin-tslint": "^5.40.1",
    "@typescript-eslint/parser": "^4.0.1",
    "ava": "^5.0.1",
    "eslint": "^7.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-webpack-plugin": "^3.2.0",
    "google-protobuf": "^3.21.2",
    "prettier": "^2.1.1",
    "standard-version": "^9.0.0",
    "ts-node": "^9.0.0",
    "typedoc": "^0.19.0",
    "typescript": "^4.0.2"
  },
  "files": [
    "build/main",
    "build/module",
    "!**/*.spec.*",
    "!**/*.json",
    "CHANGELOG.md",
    "LICENSE",
    "README.md"
  ],
  "prettier": {
    "singleQuote": false
  },
  "ava": {
    "failFast": true,
    "timeout": "60s",
    "typescript": {
      "rewritePaths": {
        "src/": "build/main/"
      },
      "compile": "tsc"
    },
    "files": [
      "!build/module/**"
    ]
  }
}
