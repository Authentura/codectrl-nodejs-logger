{
  "name": "@authentura/codectrl",
  "version": "1.0.2",
  "description": "The NodeJS logger integration for CodeCTRL",
  "exports": "./build/main/index.js",
  "typings": "build/main/index.d.ts",
  "module": "./build/module/index.js",
  "repository": "https://github.com/STBoyden/codectrl-nodejs-logger",
  "license": "MIT",
  "keywords": [],
  "type": "module",
  "scripts": {
    "build": "yarn build:protos && yarn build:docs && yarn build:main && yarn build:module",
    "build:main": "tsc -p tsconfig.json",
    "build:module": "tsc -p tsconfig.module.json",
    "build:protos": "npx protoc -I=protos/ protos/*.proto --ts_opt long_type_number,eslint_disable,ts_nocheck --ts_out=./src/protos/ && node proto-patch.js",
    "build:docs": "typedoc",
    "fix:prettier": "prettier \"src/**/*.ts\" --write",
    "fix:lint": "eslint src --ext .ts --fix",
    "test:lint": "eslint src --ext .ts",
    "test:prettier": "prettier \"src/**/*.ts\" --list-different",
    "test:run": "ava",
    "watch:build": "tsc -p tsconfig.json -w",
    "watch:test": "nyc --silent ava --watch",
    "version": "standard-version",
    "clean": "rm -rf build",
    "clean:main": "rm -rf build/main",
    "clean:module": "rm -rf build/module"
  },
  "engines": {
    "node": ">=14.16"
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.7.3",
    "@protobuf-ts/grpc-transport": "^2.8.1",
    "@protobuf-ts/plugin": "^2.8.1",
    "@protobuf-ts/protoc": "^2.8.1",
    "@protobuf-ts/runtime": "^2.8.1",
    "@protobuf-ts/runtime-rpc": "^2.8.1",
    "callsites": "^4.0.0"
  },
  "devDependencies": {
    "@ava/typescript": "^3.0.1",
    "@types/glob": "^8.0.0",
    "@types/google-protobuf": "^3.15.6",
    "@types/node": "^18.11.4",
    "@types/source-map-support": "^0.5.6",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/eslint-plugin-tslint": "^5.40.1",
    "@typescript-eslint/parser": "^4.0.1",
    "ava": "^5.0.1",
    "eslint": "^7.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-webpack-plugin": "^3.2.0",
    "esm": "^3.2.25",
    "google-protobuf": "^3.21.2",
    "prettier": "^2.1.1",
    "source-map-support": "^0.5.21",
    "standard-version": "^9.0.0",
    "typedoc": "^0.23.19",
    "typescript": "^4.0.2"
  },
  "files": [
    "build/main",
    "build/module",
    "!**/*.spec.*",
    "!**/*.json",
    "CHANGELOG.md",
    "LICENSE",
    "README.md"
  ],
  "prettier": {
    "singleQuote": false
  },
  "ava": {
    "failFast": true,
    "timeout": "60s",
    "nodeArguments": [
      "--experimental-specifier-resolution=node"
    ],
    "typescript": {
      "rewritePaths": {
        "src/": "build/main/"
      },
      "compile": "tsc"
    },
    "files": [
      "!build/module/**"
    ]
  }
}
